<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validation="clr-namespace:Common.Common;assembly=Common.Common"
             xmlns:viewModel="clr-namespace:WPFERA.ViewModel"
    x:Class="WPFERA.Views.TestView"
             mc:Ignorable="d" Background="#FFD0E8FF">
    <UserControl.DataContext>
        <viewModel:PatientViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" 
                    Grid.RowSpan="17">
            <TextBlock Text="Patients"></TextBlock>

        </StackPanel>
        <StackPanel  Grid.Row="0" Grid.Column="1" Grid.RowSpan="22"
                     Orientation="Vertical"
                     HorizontalAlignment="Stretch"
                     Height="auto"
                     Width="auto"
            Background="Gray">

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="21" Grid.Column="0"
                    Grid.ColumnSpan="7" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Left" Width="769"
                   >
            <StatusBar
                x:Name="StatusBar"
                Background="#FFF0F0F0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock
                    x:Name="PatientCountTag"
                    Text="Patient Count: "/>
                    <TextBlock 
                    x:Name="PatientCounter"
                    Margin="0,0,0,0"
                    Text="{Binding PatientCount}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10,0,10,0">
                    <TextBlock
                    x:Name="AddonCountTag" 
                    Text="Addon Code Count: "
                    Margin="30,0,0,0"/>
                    <TextBlock
                    x:Name="AddonCounter" 
                    Text="{Binding AddonChargeCount, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Width="auto"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right">
                    <TextBlock
                    x:Name="CheckAmountStatus" 
                    Text="Check Amount: $"
                    />
                    <TextBlock 
                    x:Name="PaidAmountCounter" 
                    Text="{Binding Insurance.CheckAmount, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Right"/>
                </StackPanel>
            </StatusBar>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="2"
                    Margin="10,0,0,0">
            <TextBlock x:Name="InsuranceCompanyNameTag"  
                       Height="20"
                       Text="Insurance Company Name*"/>
            <TextBox x:Name="InsuranceCompanyNameInput"
                     HorizontalAlignment="Left"
                     Width="115"
                     Height="20">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Insurance.Name" UpdateSourceTrigger="LostFocus">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock x:Name="PaymentTypeTag"
                       Text="Payment Type" />
            <ComboBox x:Name="PaymentTypeDropdown"
                      HorizontalAlignment="Left"
                      Height="20"
                      Width="115"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Key"
                      SelectedValue="{Binding Insurance.PaymentType}"
                      ItemsSource="{Binding PaymentTypes}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="4"
                    Margin="10,0,0,0">
            <TextBlock x:Name="CheckAmountTag"
                       Height="20"
                       Text="Insurance Check Amount*"/>
            <TextBox x:Name="CheckAmountInput"
                     HorizontalAlignment="Left"
                     Height="20"
                     Width="115"
                     IsEnabled="False"
                     Text="{Binding Insurance.CheckAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="5"
                    Margin="10,0,0,0">
            <TextBlock x:Name="InsuranceCompanyTaxIdTag"
                       Height="20"
                       Text="Insurance Company Tax ID*"/>
            <TextBox x:Name="InsuranceCompanyTaxIdInput"
                     HorizontalAlignment="Left"
                     Width="115" 
                     Height="20">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Insurance.TaxId" UpdateSourceTrigger="LostFocus">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="6"
                    Margin="10,0,0,0">
            <TextBlock x:Name="CheckDateTag"  
                       Height="20"
                       Text="Insurance Check Date*"/>
            <DatePicker x:Name="CheckDateInput"
                        HorizontalAlignment="Left"
                        SelectedDate="{Binding Insurance.CheckDate}"
                        Width="115"
                        Height="20"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="2"
                    Margin="10,0,0,0">
            <TextBlock x:Name="InsuranceAddressLineOneTag"
                       Height="20"
                       Text="Street Line One*"/>
            <TextBox x:Name="InsuranceStreetLineOneInput"
                     Width="115"
                     Height="20"
                     HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Insurance.Address.StreetOne" UpdateSourceTrigger="LostFocus">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock x:Name="InsuranceStreetLineTwoTag"
                       Height="20"
                       Text="Street Line Two"/>
            <TextBox x:Name="InsuranceStreetLineTwoInput"
                     Height="20"
                     Width="115"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Insurance.Address.StreetTwo" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="4"
                    Margin="10,0,0,0">
            <TextBlock x:Name="InsuranceCityTag"
                       Height="20"
                       Text="City"/>
            <TextBox x:Name="InsuranceCityInput"
                     Width="115"                               
                     Height="20"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Insurance.Address.City" UpdateSourceTrigger="LostFocus">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="5"
                    Margin="10,0,0,0">
            <TextBlock x:Name="InsuranceStateTag"
                       Height="20"
                       Text="State"/>
            <ComboBox x:Name="InsuranceAddressStateInput"
                      Height="20"
                      Width="115"
                      ItemsSource="{Binding InsuranceStates}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Key"
                      SelectedValue="{Binding Insurance.Address.State}"
                       HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="6"
                    Margin="10,5,0,0">
            <TextBlock x:Name="InsuranceZipCodeTag"
                       Height="20"
                       Text="Zip Code"/>
            <TextBox x:Name="InsuranceZipCodeInput"
                     Width="115"
                     Height="20"
                     MaxLength="9"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Insurance.Address.ZipCode" UpdateSourceTrigger="LostFocus">
                    <Binding.ValidationRules>
                        <validation:ZipCodeValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>

        </StackPanel>
        <Rectangle Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="6"
                   Margin="0,5,0,0"
                   Width="auto"
                   Height="4"
                   Fill="Gray" VerticalAlignment="Center"/>
        <StackPanel Orientation="Vertical" Grid.Row="3" Grid.Column="2"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left">
            <CheckBox Content="Use individual provider"
                      IsChecked="{Binding BillingProvider.IsIndividual}"
                      Name="IsIndividualBillingTag"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="2"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderNameTag"
                       Text="Billing Provider's Name*"
                       Height="20"/>
            <TextBox x:Name="BillingProviderNameInput"
                     Width="110"
                     Height="20"
                      HorizontalAlignment="Left"
                     IsEnabled="{Binding IsChecked, Converter={StaticResource NotConverter}, ElementName=IsIndividualBillingTag}">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.Name" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>




        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderFirstNameTag"                                                       
                       Text="Provider's First Name"/>
            <TextBox x:Name="BillingProviderFirstNameInput"                          
                     Height="20"
                     Width="115"
                      HorizontalAlignment="Left"
                     IsEnabled="{Binding IsChecked, ElementName=IsIndividualBillingTag}">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.FirstName" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="4"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderLastNameTag"                                                                                                        
                       Text="Provider's Last Name"/>
            <TextBox x:Name="BillingProviderLastNameInput"
                     IsEnabled="{Binding IsChecked, ElementName=IsIndividualBillingTag, Mode=TwoWay}"
                     Height="20"
                     Width="115"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.LastName" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="5"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderNpiTag"
                       Text="Provider's NPI*"
                       Height="20"/>
            <TextBox x:Name="BillingProviderNpiInput"
                     Width="115"
                     Height="20"
                     MaxLength="10"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.Npi" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:NpivalidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="2"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderLineOneTag"
                       Height="20"
                       Text="Street Line One*"/>
            <TextBox x:Name="BillingProviderAddressLineOneInput"
                     Width="115"  
                     Height="20"
                     HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.Address.StreetOne" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderAddressTwoTag"
                       Height="20"
                       Text="Street Line Two"/>
            <TextBox x:Name="BillingProviderAddressTwoInput"
                     Height="20"
                     Width="115"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.Address.StreetTwo" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="4"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderCityTag" 
                       Height="20"
                       Text="City"/>
            <TextBox x:Name="BillingProviderCityInput"
                     Width="115"    
                     Height="20"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.Address.City" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="5"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderStateTag" 
                       Height="20"
                       Text="State"/>
            <ComboBox x:Name="BillingProviderStateInput" 
                      Height="20"
                      Width="115"
                      ItemsSource="{Binding ProviderStates}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Key"
                      SelectedValue="{Binding BillingProvider.Address.State}"
                       HorizontalAlignment="Left"/>

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="6"
                    Margin="10,0,0,0">
            <TextBlock x:Name="BillingProviderZipCodeTag"
                       Height="20"
                       Text="Zip Code"/>
            <TextBox x:Name="BillingProviderZipCodeInput"
                     Width="115"
                     Height="20"
                     MaxLength="9"
                      HorizontalAlignment="Left"
                     VerticalAlignment="Bottom">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="BillingProvider.Address.ZipCode" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:ZipCodeValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <Rectangle Grid.Row="6" Margin="0,5,0,0" Grid.Column="2" Grid.ColumnSpan="6"
                   Width="auto"
                   Height="4"
                   
                   Fill="Gray" VerticalAlignment="Center"/>
        <StackPanel Orientation="Vertical" Grid.Row="7" Grid.Column="2"
                    Margin="10,10,0,10">
            <CheckBox IsChecked="{Binding Patient.UsePlatformId}"
                          Content="Use Platform ID?"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="8" Grid.Column="2"
                    Margin="10,0,0,0">
            <TextBlock x:Name="PatientFirstNameTag"
                       Text="Patient's First Name*"
                       Height="20"/>
            <TextBox x:Name="PatientFirstNameInput"
                     Width="115"
                     Height="20"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Patient.FirstName" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>


        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="8" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock x:Name="PatientLastNameTag"
                       Text="Patients's Last Name*"
                       Height="20"/>
            <TextBox x:Name="PatientLastNameInput"
                     Width="115"
                     Height="20"
                      HorizontalAlignment="Left">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
                <Binding Path="Patient.LastName" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="8" Grid.Column="4"
                    Margin="10,0,0,0">
            <TextBlock x:Name="PatientCopayTag"
                       Text="Patient's Copay*"
                       Height="20"/>
            <TextBox x:Name="PatientCopayInput"
                     Width="115"
                     Height="20"
                      HorizontalAlignment="Left"
                     Text="{Binding Patient.Charge.Copay, StringFormat=\{0:F2\}}">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <DockPanel >
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="9" Grid.Column="2"
                    Margin="10,10,0,10">
            <CheckBox x:Name="IncludeSubscriberInput"
                          IsChecked="{Binding Patient.IncludeSubscriber}"
                          Content="Include Subscriber?"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="10" Grid.Column="2"
                    Margin="10,0,0,0">
            <TextBlock x:Name="SubscriberFirstNameTag"
                       Text="Subscriber's First Name*"
                       Height="20"/>
            <TextBox x:Name="SubscriberFirstNameInput"
                     Text="{Binding Patient.Subscriber.FirstName}"
                     Width="115"
                     Height="20"
                     HorizontalAlignment="Left"
                     IsEnabled="{Binding IsChecked, ElementName=IncludeSubscriberInput}"/>

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="10" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock x:Name="SubscriberLastNameTag"
                       Text="Subscriber's Last Name*"
                       Height="20"/>
            <TextBox x:Name="SubscriberLastNameInput"
                     Text="{Binding Patient.Subscriber.LastName}"
                     IsEnabled="{Binding IsChecked, ElementName=IncludeSubscriberInput}"
                     Width="115"
                     Height="20"
                     HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="10" Grid.Column="4"
                    Margin="10,0,0,0">
            <TextBlock x:Name="SubscriberMemberIdTag"
                       Text="Subscriber's Member ID*"
                       Height="20"/>
            <TextBox x:Name="SubscriberMemberIdnput"
                      Text="{Binding Patient.Subscriber.MemberId}"
                      IsEnabled="{Binding IsChecked, ElementName=IncludeSubscriberInput}"
                      Width="115"
                      Height="20"
                      HorizontalAlignment="Left"/>
        </StackPanel>
        <Rectangle Grid.Row="11" Margin="0,5,0,0" Grid.Column="2" Grid.ColumnSpan="6"
                   Width="auto"
                   Height="4"
                   
                   Fill="Gray" VerticalAlignment="Center"/>
        <StackPanel Orientation="Vertical" Grid.Row="12"
                    Margin="10,10,0,10" Grid.Column="2">
            <CheckBox x:Name="IsAlsoRendering"
                      IsEnabled="{Binding ElementName=IsIndividualBillingTag,Path=IsChecked}"
                      Content="Copy Billing Provider?"
                      IsChecked="{Binding BillingProvider.IsAlsoRendering, UpdateSourceTrigger=PropertyChanged}"
                      Command="{Binding UpdateRenderingProviderCommand}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="13"
                    Margin="10,0,0,0" Grid.Column="2">
            <TextBlock x:Name="RenderingProviderFirstNameTag"
                       Text="Provider's First Name*"
                       Height="20"/>
            <TextBox x:Name="RenderingProviderFirstNameInput" 
                     Text="{Binding Patient.Provider.FirstName}"
                     Width="115"
                     Height="20"
                     HorizontalAlignment="Left"
                     IsEnabled="{Binding ElementName=IsAlsoRendering, Path=IsChecked, Converter={StaticResource NotConverter}}"/>

        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="13" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock x:Name="RenderingProviderLastNameTag"
                       Text="Provider's Last Name*"
                       Height="20"/>

            <TextBox x:Name="RenderingProviderLastNameInput"   
                     Text="{Binding Patient.Provider.LastName}"
                     Width="115"
                     Height="20"
                     HorizontalAlignment="Left"
                     IsEnabled="{Binding ElementName=IsAlsoRendering, Path=IsChecked, Converter={StaticResource NotConverter}}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="13" Grid.Column="4"
                    Margin="10,0,0,0">
            <TextBlock x:Name="RenderingProviderNpiTag"
                       Text="Provider's NPI*"
                       Height="20"/>
            <TextBox x:Name="RenderingProviderNpiInput"
                     Text="{Binding Patient.Provider.Npi}"
                     Width="115"
                     Height="20"
                     MaxLength="10" 
                     HorizontalAlignment="Left"
                     IsEnabled="{Binding ElementName=IsAlsoRendering, Path=IsChecked,Converter={StaticResource NotConverter}}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="14" Grid.Column="2"
                    Margin="10,0,0,0">
            <TextBlock x:Name="DateOfServiceTag"
                       Text="Date Of Service*"
                       Height="20"/>
            <DatePicker x:Name="DateofServiceInput"
                        SelectedDate="{Binding Patient.Charge.DateOfService}"
                        Width="115"
                        Height="20"
                        HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="14" Grid.Column="3"
                    Margin="10,0,0,0">
            <TextBlock Name="PlaceofServiceTag"
                       Text="Place Of Service*"/>
            <ComboBox ItemsSource="{Binding PlacesOfService}"
                      SelectedValuePath="Key"
                      SelectedValue="{Binding Patient.Charge.PlaceOfService.ServiceLocation}"
                      MinWidth="115"
                      MaxWidth="115"
                       HorizontalAlignment="Left"/>
