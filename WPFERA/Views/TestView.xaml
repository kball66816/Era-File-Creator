<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validation="clr-namespace:Common.Common;assembly=Common.Common"
             xmlns:viewModel="clr-namespace:WPFERA.ViewModel"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
    x:Class="WPFERA.Views.TestView"
             mc:Ignorable="d" Background="#FFD0E8FF">
    <UserControl.DataContext>
        <viewModel:PatientViewModel/>
    </UserControl.DataContext>

    <Grid MinWidth="768" MinHeight="644">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" 
                    HorizontalAlignment="Left"
                    Grid.RowSpan="21" Background="#FF6380FF">
            <TextBlock Text="Patients"></TextBlock>
        </StackPanel>
        <StackPanel  Grid.Row="0" Grid.Column="1" Grid.RowSpan="20"
                     HorizontalAlignment="Left"
                     Orientation="Horizontal"
                     Width="4"
                     Background="Gray">

        </StackPanel>
        <Rectangle Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="5"
                   Margin="0,5,0,0"
                   Width="auto"
                   Height="2"
                   Fill="Gray" VerticalAlignment="Center"/>
        <Rectangle Grid.Row="6" Margin="0,5,0,0" Grid.Column="2" Grid.ColumnSpan="5"
                   Width="auto"
                   Height="2"
                   
                   Fill="Gray" VerticalAlignment="Center"/>
        <Rectangle Grid.Row="11" Margin="0,5,0,0" Grid.Column="2" Grid.ColumnSpan="5"
                   Width="auto"
                   Height="2"
                   
                   Fill="Gray" VerticalAlignment="Center"/>
        <Rectangle Grid.Row="19" Margin="0,5,0,0" Grid.Column="2"
                   Grid.ColumnSpan="5"
                   Width="auto"
                   Height="2"
                   Fill="Gray" VerticalAlignment="Center"/>
        <StatusBar Grid.Row="21" Grid.ColumnSpan="7"
                x:Name="StatusBar"
                Background="#FFF0F0F0">
            <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                <TextBlock
                    x:Name="PatientCountTag"
                    Text="Patient Count: "/>
                <TextBlock 
                    x:Name="PatientCounter"
                    Margin="0,0,0,0"
                    Text="{Binding PatientCount}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                            Margin="10,0,10,0">
                <TextBlock
                    x:Name="AddonCountTag" 
                    Text="Addon Code Count: "
                    Margin="30,0,0,0"/>
                <TextBlock
                    x:Name="AddonCounter" 
                    Text="{Binding AddonChargeCount, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                            Width="auto"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right">
                <TextBlock
                    x:Name="CheckAmountStatus" 
                    Text="Check Amount: $"
                    />
                <TextBlock 
                    x:Name="PaidAmountCounter" 
                    Text="{Binding Insurance.CheckAmount, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Right"/>
            </StackPanel>
        </StatusBar>
        <TextBlock x:Name="InsuranceCompanyNameTag"  
                   Height="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                   Text="Insurance Company Name*"
                   Grid.Row="0" Grid.Column="2" Width="145"/>
        <TextBox x:Name="InsuranceCompanyNameInput"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Width="115"
                 Height="20"
                 Grid.Row="0" Grid.Column="2"
                 Margin="10,0,0,0">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Insurance.Name" UpdateSourceTrigger="LostFocus">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="PaymentTypeTag"
                       Text="Payment Type" 
                   Grid.Row="0" Grid.Column="3"
                   Margin="10,0,0,0"/>
        <ComboBox x:Name="PaymentTypeDropdown"
                  Grid.Row="0" Grid.Column="3"
                  HorizontalAlignment="Left"
                  Margin="10,20,0,0"
                  Height="20"
                      Width="115"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Key"
                      SelectedValue="{Binding Insurance.PaymentType}"
                      ItemsSource="{Binding PaymentTypes}"/>
        <TextBlock x:Name="CheckAmountTag" Grid.Row="0" Grid.Column="4"
                       Height="20"
                       Text="Insurance Check Amount*"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="CheckAmountInput"
                 Grid.Row="0" Grid.Column="4"
                 Margin="10,20,0,0"
                 Height="20"
                     Width="115"
                     IsEnabled="False"
                 HorizontalAlignment="Left"
                     Text="{Binding Insurance.CheckAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock x:Name="InsuranceCompanyTaxIdTag" Grid.Row="0" Grid.Column="5"
                   Margin="10,0,0,0"    
                   Height="20"
                       Text="Insurance Company Tax ID*"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="InsuranceCompanyTaxIdInput" Grid.Row="0" Grid.Column="5"
                 HorizontalAlignment="Left"
                 Margin="10,20,0,0"
                     Width="115">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Insurance.TaxId" UpdateSourceTrigger="LostFocus">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="CheckDateTag"   Grid.Row="0" Grid.Column="6"
                   Margin="10,0,0,0"
                       Height="20"
                   VerticalAlignment="Top"
                       Text="Insurance Check Date*"/>
        <DatePicker x:Name="CheckDateInput" Grid.Row="0" Grid.Column="6"
                    Margin="10,20,0,0"
                    HorizontalAlignment="Left"
                        SelectedDate="{Binding Insurance.CheckDate}"
                        Width="115"/>
        <TextBlock x:Name="InsuranceAddressLineOneTag" Grid.Row="1" Grid.Column="2"
                       Height="20"
                       Text="Street Line One*"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0" Width="86"/>
        <TextBox x:Name="InsuranceStreetLineOneInput" Grid.Row="1" Grid.Column="2"
                     Width="115"
                     HorizontalAlignment="Left"
                 Margin="10,20,0,0">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Insurance.Address.StreetOne" UpdateSourceTrigger="LostFocus">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="InsuranceStreetLineTwoTag" Grid.Row="1" Grid.Column="3"
                       Height="20"
                       Text="Street Line Two"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left" Width="80"/>
        <TextBox x:Name="InsuranceStreetLineTwoInput" Grid.Row="1" Grid.Column="3"
                     Width="115"
                      HorizontalAlignment="Left"
                 Margin="10,20,0,0">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Insurance.Address.StreetTwo" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="InsuranceCityTag" Grid.Row="1" Grid.Column="4"
                       Height="20"
                       Text="City"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"/>
        <TextBox x:Name="InsuranceCityInput" Grid.Row="1" Grid.Column="4"
                     Width="115"
                      HorizontalAlignment="Left"
                 Margin="10,20,0,0">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Insurance.Address.City" UpdateSourceTrigger="LostFocus">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="InsuranceStateTag" Grid.Row="1" Grid.Column="5"
                       Height="20"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Text="State"/>
        <ComboBox x:Name="InsuranceAddressStateInput" Grid.Row="1" Grid.Column="5"
                      Width="115"
                  Margin="10,20,0,0"
                      ItemsSource="{Binding InsuranceStates}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Key"
                      SelectedValue="{Binding Insurance.Address.State}"
                       HorizontalAlignment="Left"/>
        <TextBlock x:Name="InsuranceZipCodeTag" Grid.Row="1" Grid.Column="6"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0"
                       Height="20"
                       Text="Zip Code" Width="48"/>
        <TextBox x:Name="InsuranceZipCodeInput" Grid.Row="1" Grid.Column="6"
                 Margin="10,20,0,0"
                     Width="115"
                     MaxLength="9"
                     HorizontalAlignment="Left">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Insurance.Address.ZipCode" UpdateSourceTrigger="LostFocus">
                <Binding.ValidationRules>
                    <validation:ZipCodeValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <CheckBox Content="Use individual provider" Grid.Row="3" Grid.Column="2"
                  Margin="10,10,0,0"
                      IsChecked="{Binding BillingProvider.IsIndividual}"
                      Name="IsIndividualBillingTag"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left" Height="15" Width="142"/>
        <TextBlock x:Name="BillingProviderNameTag" Grid.Row="4" Grid.Column="2"
                       Text="Billing Provider's Name*"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Height="20" Width="128"/>
        <TextBox x:Name="BillingProviderNameInput" Grid.Row="4" Grid.Column="2"
                     Width="110"
                 Margin="10,20,0,0"
                      HorizontalAlignment="Left"
                     IsEnabled="{Binding IsChecked, Converter={StaticResource NotConverter}, ElementName=IsIndividualBillingTag}">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.Name" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="BillingProviderFirstNameTag" Grid.Row="4" Grid.Column="3"                                                      
                       Text="Provider's First Name"
                   Margin="10,0,0,0"/>
        <TextBox x:Name="BillingProviderFirstNameInput" Grid.Row="4" Grid.Column="3"
                     Width="115"
                 Margin="10,20,0,0"
                      HorizontalAlignment="Left"
                     IsEnabled="{Binding IsChecked, ElementName=IsIndividualBillingTag}">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.FirstName" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="BillingProviderLastNameTag"    Grid.Row="4" Grid.Column="4"                                                                                                     
                       Text="Provider's Last Name"
                   Margin="10,0,0,0"/>
        <TextBox x:Name="BillingProviderLastNameInput" Grid.Row="4" Grid.Column="4"
                     IsEnabled="{Binding IsChecked, ElementName=IsIndividualBillingTag, Mode=TwoWay}"
                     Width="115"
                 Margin="10,20,0,0"
                      HorizontalAlignment="Left">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.LastName" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="BillingProviderNpiTag" Grid.Row="4" Grid.Column="5"
                   Text="Provider's NPI*"
                   Height="20"
                   Margin="10,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Width="79"/>
        <TextBox x:Name="BillingProviderNpiInput" Grid.Row="4" Grid.Column="5"
                     Width="115"
                     MaxLength="10"
                 Margin="10,20,0,0"
                      HorizontalAlignment="Left">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.Npi" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:NpivalidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="BillingProviderLineOneTag" Grid.Row="5" Grid.Column="2"
                       Height="20"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"
                       Text="Street Line One*"/>
        <TextBox x:Name="BillingProviderAddressLineOneInput" Grid.Row="5" Grid.Column="2"
                     Width="115"
                 Margin="10,20,0,0"
                 HorizontalAlignment="Left">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.Address.StreetOne" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="BillingProviderAddressTwoTag" Grid.Row="5" Grid.Column="3"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0"
                       Height="20"
                       Text="Street Line Two" Width="80"/>
        <TextBox x:Name="BillingProviderAddressTwoInput" Grid.Row="5" Grid.Column="3"
                 Margin="10,20,0,0"
                     Width="115"
                      HorizontalAlignment="Left">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.Address.StreetTwo" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="BillingProviderCityTag" Grid.Row="5" Grid.Column="4"
                       Height="20"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                       Text="City" Width="20"/>
        <TextBox x:Name="BillingProviderCityInput" Grid.Row="5" Grid.Column="4"
                     Width="115"
                      HorizontalAlignment="Left"
                Margin="10,20,0,0">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.Address.City" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="BillingProviderStateTag" Grid.Row="5" Grid.Column="5"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Height="20"
                       Text="State"/>
        <ComboBox x:Name="BillingProviderStateInput"  Grid.Row="5" Grid.Column="5"
                  Margin="10,20,0,0"
                      Width="115"
                      ItemsSource="{Binding ProviderStates}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Key"
                      SelectedValue="{Binding BillingProvider.Address.State}"
                       HorizontalAlignment="Left"/>
        <TextBlock x:Name="BillingProviderZipCodeTag" Grid.Row="5" Grid.Column="6"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                   Height="20"
                       Text="Zip Code"/>
        <TextBox x:Name="BillingProviderZipCodeInput" Grid.Row="5" Grid.Column="6"
                     Width="115"
                 Margin="10,0,0,0"
                     Height="20"
                     MaxLength="9"
                      HorizontalAlignment="Left"
                     VerticalAlignment="Bottom">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="BillingProvider.Address.ZipCode" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <validation:ZipCodeValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <CheckBox Grid.Row="7" Grid.Column="2"
                  VerticalAlignment="Top"
                  Margin="10,10,0,0"
            IsChecked="{Binding Patient.UsePlatformId}"
                          Content="Use Platform ID?" Height="15"/>
        <TextBlock x:Name="PatientFirstNameTag" Grid.Row="8" Grid.Column="2"
                       Text="Patient's First Name*"
                       Height="20"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="PatientFirstNameInput" Grid.Row="8" Grid.Column="2"
                     Width="115"
                 Margin="10,20,0,0"
                      HorizontalAlignment="Left">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Patient.FirstName" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="PatientLastNameTag" Grid.Row="8" Grid.Column="3"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Text="Patients's Last Name*"
                       Height="20"/>
        <TextBox x:Name="PatientLastNameInput" Grid.Row="8" Grid.Column="3"
                 Margin="10,20,0,0"
                     Width="115"
                      HorizontalAlignment="Left">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
            <Binding Path="Patient.LastName" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                <Binding.ValidationRules>
                    <validation:StringValidationRule ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBlock x:Name="PatientCopayTag" Grid.Row="8" Grid.Column="4"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Text="Patient's Copay*"
                       Height="20"/>
        <TextBox x:Name="PatientCopayInput" Grid.Row="8" Grid.Column="4"
                 Margin="10,20,0,0"
                     Width="115"
                      HorizontalAlignment="Left"
                     Text="{Binding Patient.Charge.Copay, StringFormat=\{0:F2\}}">
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <DockPanel >
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
        </TextBox>
        <CheckBox x:Name="IncludeSubscriberInput" Grid.Row="9" Grid.Column="2"
                  Margin="10,0,0,0"
                          IsChecked="{Binding Patient.IncludeSubscriber}"
                          Content="Include Subscriber?"/>
        <TextBlock x:Name="SubscriberFirstNameTag" Grid.Row="10" Grid.Column="2"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"
                       Text="Subscriber's First Name*"
                       Height="20"/>
        <TextBox x:Name="SubscriberFirstNameInput" Grid.Row="10" Grid.Column="2"
                     Text="{Binding Patient.Subscriber.FirstName}"
                     Width="115"
                 Margin="10,20,0,0"
                     HorizontalAlignment="Left"
                     IsEnabled="{Binding IsChecked, ElementName=IncludeSubscriberInput}"/>
        <TextBlock x:Name="SubscriberLastNameTag" Grid.Row="10" Grid.Column="3"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Text="Subscriber's Last Name*"
                       Height="20"/>
        <TextBox x:Name="SubscriberLastNameInput"
                     Text="{Binding Patient.Subscriber.LastName}" Grid.Row="10" Grid.Column="3"
                 Margin="10,20,0,0"
                     IsEnabled="{Binding IsChecked, ElementName=IncludeSubscriberInput}"
                     Width="115"
                     HorizontalAlignment="Left"/>
        <TextBlock x:Name="SubscriberMemberIdTag" Grid.Row="10" Grid.Column="4"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"
                       Text="Subscriber's Member ID*"
                       Height="20"/>
        <TextBox x:Name="SubscriberMemberIdnput" Grid.Row="10" Grid.Column="4"
                 Margin="10,20,0,0"
                      Text="{Binding Patient.Subscriber.MemberId}"
                      IsEnabled="{Binding IsChecked, ElementName=IncludeSubscriberInput}"
                      Width="115"
                      HorizontalAlignment="Left"/>
        <CheckBox x:Name="IsAlsoRendering" Grid.Row="12" Grid.Column="2"
                  Margin="10,10,0,0"
                      IsEnabled="{Binding ElementName=IsIndividualBillingTag,Path=IsChecked}"
                      Content="Copy Billing Provider?"
                      IsChecked="{Binding BillingProvider.IsAlsoRendering, UpdateSourceTrigger=PropertyChanged}"
                      Command="{Binding UpdateRenderingProviderCommand}"/>
        <TextBlock x:Name="RenderingProviderFirstNameTag" Grid.Row="13" Grid.Column="2"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Text="Provider's First Name*"
                       Height="20"/>
        <TextBox x:Name="RenderingProviderFirstNameInput" Grid.Row="13" Grid.Column="2"
                 Margin="10,20,0,0"
                     Text="{Binding Patient.Provider.FirstName}"
                     Width="115"
                     HorizontalAlignment="Left"
                     IsEnabled="{Binding ElementName=IsAlsoRendering, Path=IsChecked, Converter={StaticResource NotConverter}}"/>
        <TextBlock x:Name="RenderingProviderLastNameTag" Grid.Row="13" Grid.Column="3"
                   Margin="10,0,0,0"
                   VerticalAlignment="Top"
                       Text="Provider's Last Name*"
                       Height="20"/>
        <TextBox x:Name="RenderingProviderLastNameInput" Grid.Row="13" Grid.Column="3"
                 Margin="10,20,0,0"
                     Text="{Binding Patient.Provider.LastName}"
                     Width="115"
                     HorizontalAlignment="Left"
                     IsEnabled="{Binding ElementName=IsAlsoRendering, Path=IsChecked, Converter={StaticResource NotConverter}}"/>
        <TextBlock x:Name="RenderingProviderNpiTag" Grid.Row="13" Grid.Column="4"
                   VerticalAlignment="Top"
                   Margin="10,0,0,0"
                       Text="Provider's NPI*"
                       Height="20"/>
        <TextBox x:Name="RenderingProviderNpiInput" Grid.Row="13" Grid.Column="4"
